---
// Hero.astro
---
<section id="inicio" class="relative w-full min-h-screen overflow-hidden flex flex-col items-center justify-center text-center px-4 sm:px-6 pt-32 text-white bg-black">
  <!-- Fondo: imagen + overlay oscuro -->
  <div class="absolute inset-0 z-0">
    <picture class="w-full h-full block pointer-events-none">
      <source srcset="/fondo2.webp" media="(max-width: 768px)" />
      <img src="/fondo2.webp" alt="Hero Background" class="w-full h-[50%] sm:h-full object-cover object-bottom absolute bottom-0 left-0" />
    </picture>
    <div class="absolute inset-0 bg-black/60"></div>
  </div>

  <!-- Contenido -->
  <div class="relative z-20 w-full max-w-2xl flex flex-col items-center gap-6">
    <!-- Banner -->
    <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/5 border border-white/10 rounded-lg text-white text-sm font-medium shadow-sm">
      <span>⚡</span>
      Mejor canal de apuestas de la Liga
    </div>

    <!-- Título -->
    <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold leading-tight text-white">
      Bienvenido a Afa Bets <br />
      <span class="text-orange-500">Tu destino para las mejores apuestas</span>
    </h1>

    <!-- Subtítulo -->
    <p class="text-gray-300 text-sm sm:text-base max-w-md">
      Apuesta, Gana y Multiplica tus ganancias
    </p>

    <!-- Botones -->
    <div class="flex flex-col sm:flex-row gap-4 mt-4 w-full sm:w-auto justify-center">
      <a href="https://t.me/ApuestasLaLigaPronosticos" class="px-6 py-3 bg-orange-500 text-white rounded-xl font-semibold shadow text-center hover:bg-orange-600 transition">
        Unirse al canal
      </a>
      <a href="#ventajas" class="px-6 py-3 border border-white/20 text-white rounded-xl font-semibold text-center hover:bg-white/10 transition">
        Saber más
      </a>
    </div>
  </div>

  <!-- Curva decorativa inferior -->
</section>
