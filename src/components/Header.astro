---
// Header.astro
---
<header class="fixed top-4 left-1/2 -translate-x-1/2 z-50 w-[95%] max-w-7xl px-6 py-3 bg-white/10 backdrop-blur-lg rounded-2xl border border-white/20 shadow-lg flex items-center justify-between">
  <!-- Logo -->
  <div class="flex items-center gap-2">
    <a href="#"><img src="/logo.jpg" alt="Alfa Bets Logo" class="w-14 h-14" /></a>
    <!--<span class="text-white text-lg font-semibold">Alfa Bets</span> -->
  </div>

  <!-- Nav links Desktop -->
  <nav class="hidden md:flex gap-8 text-sm text-gray-300">
    <a href="#inicio" class="hover:text-white transition">Inicio</a>
    <a href="#comotrabajamos" class="hover:text-white transition">Como Trabajamos</a>
    <a href="#datos" class="hover:text-white transition">Datos</a>
    <a href="#ventajas" class="hover:text-white transition">Ventajas</a>
  </nav>

  <!-- Sign Up Button Desktop -->
  <button class="ml-6 hidden md:flex items-center gap-2 text-white border border-white/20 px-4 py-1.5 rounded-xl hover:bg-white/10 transition">
    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A4.992 4.992 0 0112 15c1.657 0 3.156.804 4.121 2.03M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
    </svg>
    <a href="https://t.me/ApuestasLaLigaPronosticos">Únete al canal</a>
  </button>

  <!-- Hamburger Menu Button (Mobile) -->
  <div class="md:hidden flex items-center relative">
    <button id="menu-toggle" class="text-gray-300 hover:text-white">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>

    <!-- Mobile Menu Dropdown -->
    <div id="mobile-menu" class="absolute top-10 right-0 hidden w-48 bg-white/10 backdrop-blur-md text-white rounded-xl shadow-lg py-2 border border-white/20 text-center">
      <a href="#inicio" class="block px-4 py-2 hover:bg-white/20 transition menu-link">Inicio</a>
      <a href="#comotrabajamos" class="block px-4 py-2 hover:bg-white/20 transition menu-link">Como Trabajamos</a>
      <a href="#datos" class="block px-4 py-2 hover:bg-white/20 transition menu-link">Datos</a>
      <a href="#ventajas" class="block px-4 py-2 hover:bg-white/20 transition menu-link">Ventajas</a>
      <div class="mt-4 flex justify-center">
        <button class="flex items-center gap-2 text-white border border-white/20 px-4 py-1.5 rounded-xl hover:bg-white/10 transition">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A4.992 4.992 0 0112 15c1.657 0 3.156.804 4.121 2.03M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <a href="https://t.me/ApuestasLaLigaPronosticos">Únete al canal</a>
        </button>
      </div>
    </div>
  </div>
</header>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const menuToggle = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");
    const menuLinks = document.querySelectorAll("#mobile-menu .menu-link");

    if (menuToggle && mobileMenu) {
      menuToggle.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");
      });

      menuLinks.forEach(link => {
        link.addEventListener("click", () => {
          mobileMenu.classList.add("hidden");
        });
      });
    }
  });
</script>